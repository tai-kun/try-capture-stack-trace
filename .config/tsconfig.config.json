{
  "extends": [
    "@tsconfig/node22",
    "@tsconfig/strictest"
  ],
  "include": [
    "./**/*"
  ],
  "compilerOptions": {
    "types": [
      "node"
    ],
    "lib": [
      "ESNext"
    ],
    "noEmit": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "erasableSyntaxOnly": true
  }
}
